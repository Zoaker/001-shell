"==================================================================
"This is for vim/gvim(win7) setting
"=================================================================

syntax on             
syntax enable 
set nu                                        "set number
set autoindent                                "set insert space char
set tabstop=4                                 "Indentation levels every four coloms
set noexpandtab                                 "transfer tab to space
set nocompatible                              "use the complete function of vim
set matchtime=5                                "set bell to flash
set ruler                                     "show current position at the bottom
set backspace=indent,eol,start
set noautoindent
set hlsearch                                  "hightlight search
set incsearch
set wrap
set ignorecase                                "ignore case sensitive
set showcmd                                   "show command
set showmode                                  "show mode
set cmdheight=2                               "command line height
set nocindent
set formatoptions-=r
set go+=b
set guifont=Monaco\ Italic\ 14.1
